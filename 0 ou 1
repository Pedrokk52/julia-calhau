#include <stdio.h>

void menu() {
    int escolha;
    do {
        printf("Menu:\n");
        printf("1. Opção 1\n");
        printf("0. Sair\n");
        printf("Escolha uma opção (1 ou 0): ");
        scanf("%d", &escolha);

        if (escolha == 1) {
            printf("Você selecionou a opção 1.\n");
            
        } else if (escolha == 0) {
            printf("Programa encerrado.\n");
        } else {
            printf("Opção inválida. Por favor, escolha 1 ou 0.\n");
        }
    } while (escolha != 0);
}

int main() {
    menu();
    return 0;
}
